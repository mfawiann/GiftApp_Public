<?xml version="1.0" encoding="utf-8"?>
<!--
  Splash Screen Navigation Layout
  Public-Friendly Notes:
  - ConstraintLayout is used as a container for navigation fragment.
  - NavHostFragment manages navigation between fragments inside the splash screen.
  - app:defaultNavHost="true" ensures the fragment handles system back button by default.
  - app:navGraph points to the navigation graph file defining the fragment destinations.
  - Constraint layout ensures full screen coverage for the navigation host.
-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- Navigation host fragment
         This fragment handles navigation between internal fragments
         System back button is handled automatically
         Navigation graph XML for fragment destinations
         Public-friendly: ignore warning if NavGraph is missing-->
    <fragment
        android:id="@+id/nav_host_fragment_content_splash"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navGraph="@navigation/nav_graph"
        tools:ignore="MissingClass" />

</androidx.constraintlayout.widget.ConstraintLayout>
